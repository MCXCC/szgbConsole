<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.clztoolsconsole.sys.user.mapper.SysUserCertificationMapper">
    <resultMap id="UserCertification" type="org.example.clztoolsconsole.sys.user.entity.SysUserCertification">
        <id property="id" column="id"/>
        <result property="gotAt" column="got_at" javaType="java.util.Date"/>
        <result property="expiredAt" column="expired_at" javaType="java.util.Date"/>
        <result property="createdAt" column="created_at" javaType="java.util.Date"/>
        <result property="updatedAt" column="updated_at" javaType="java.util.Date"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="version" column="version"/>
        <result property="sortOrder" column="sort_order"/>
    </resultMap>

    <sql id="userCertificationColumns">
        a.id,
        a.user_id AS "user.id",
        a.certification_id AS "certification.id",
        a.got_at,
        a.expired_at,
        a.created_at,
        a.updated_at,
        a.is_deleted,
        a.version,
        a.created_by AS "createdBy.id",
        a.updated_by AS "updatedBy.id",
        a.sort_order,
        u.name AS "user.name",
        c.name AS "certification.name"
    </sql>

    <sql id="userCertificationJoins">
        LEFT JOIN sys_user u ON u.id = a.user_id
        LEFT JOIN certification c ON c.id = a.certification_id
    </sql>

    <sql id="userCertificationWhere">
        a.is_deleted = false
        <if test="user != null and user.id != null">
            AND a.user_id = #{user.id}
        </if>
        <if test="certification != null and certification.id != null">
            AND a.certification_id = #{certification.id}
        </if>
    </sql>

    <select id="get" resultMap="UserCertification">
        SELECT
        <include refid="userCertificationColumns"/>
        FROM sys_user_certification a
        <include refid="userCertificationJoins"/>
        where a.is_deleted=false
        and a.id = #{id}
    </select>

    <select id="findList" resultMap="UserCertification">
        SELECT
        <include refid="userCertificationColumns"/>
        FROM sys_user_certification a
        <include refid="userCertificationJoins"/>
        <where>
            <include refid="userCertificationWhere"/>
        </where>

        <if test="page!=null and page.orderBy != null and page.orderBy != ''">
            ORDER BY ${page.orderBy}
        </if>

        <if test="page!=null and page.first >= 0 and page.pageSize > 0">
            LIMIT #{page.first}, #{page.pageSize}
        </if>
    </select>

    <select id="getCount" resultType="int">
        SELECT COUNT(*)
        FROM sys_user_certification a
        WHERE
        <include refid="userCertificationWhere"/>
    </select>

    <insert id="insert" parameterType="org.example.clztoolsconsole.sys.user.entity.SysUserCertification">
        INSERT INTO sys_user_certification
        (user_id,
         certification_id,
         got_at,
         expired_at,
         created_by,
         updated_by)
        VALUES (#{user.id},
                #{certification.id},
                #{gotAt},
                #{expiredAt},
                #{createdBy.id},
                #{updatedBy.id})
    </insert>

    <update id="update" parameterType="org.example.clztoolsconsole.sys.user.entity.SysUserCertification">
        UPDATE sys_user_certification
        <set>
            <if test="user != null and user.id != null">
                user_id = #{user.id},
            </if>
            <if test="certification != null and certification.id != null">
                certification_id = #{certification.id},
            </if>
            <if test="gotAt != null">
                got_at=#{gotAt},
            </if>
            <if test="expiredAt != null">
                expired_at=#{expiredAt},
            </if>
            <if test="updatedBy.id != null">
                updated_by=#{updatedBy.id},
            </if>
            <if test="isDeleted != null">
                is_deleted=#{isDeleted},
            </if>
            <if test="version != null">
                version=#{version}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="delete" >
        UPDATE sys_user_certification
        SET is_deleted= TRUE
        where id = #{id}
    </update>
</mapper>