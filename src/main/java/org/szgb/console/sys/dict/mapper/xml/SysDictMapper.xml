<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.szgb.console.sys.dict.mapper.SysDictMapper">
    <resultMap id="SysDict" type="org.szgb.console.sys.dict.entity.SysDict" autoMapping="true">
        <collection property="children" column="id" ofType="org.szgb.console.sys.dict.entity.SysDictChildren" select="selectChildren"/>
    </resultMap>

    <sql id="dictJoins">
    </sql>

    <sql id="dictWhere">
        is_deleted = false
        <if test="name != null and name != ''">
            AND name Like CONCAT('%', #{name}, '%')
        </if>
    </sql>

    <select id="get" resultMap="SysDict">
        SELECT *
        FROM sys_dict a
        where is_deleted = false
          and id = #{id}
    </select>

    <select id="findList" resultMap="SysDict">
        SELECT *
        FROM sys_dict a
        <where>
            <include refid="dictWhere"/>
        </where>

        <if test="page != null and page.orderBy != null and page.orderBy != ''">
            ORDER BY ${page.orderBy}
        </if>

        <if test="page != null and page.first >= 0 and page.pageSize > 0">
            LIMIT #{page.first}, #{page.pageSize}
        </if>
    </select>


    <select id="getCount" resultType="int">
        SELECT COUNT(*)
        FROM sys_dict a
        <where>
            <include refid="dictWhere"/>
        </where>
    </select>

    <select id="selectChildren" resultType="org.szgb.console.sys.dict.entity.SysDictChildren">
        SELECT *
        FROM sys_dict_children
        WHERE
        dict_id = #{dict.id}
    </select>

    <insert id="insert" parameterType="org.szgb.console.sys.dict.entity.SysDict" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO sys_dict
        (name,
         created_by,
         updated_by)
        VALUES (#{name},
                #{createdBy.id},
                #{updatedBy.id})
    </insert>

    <update id="update" parameterType="org.szgb.console.sys.dict.entity.SysDict">
        UPDATE sys_dict
        <set>
            <if test="name != null and name != ''">
                name=#{name},
            </if>
            <if test="updatedBy != null and updatedBy.id != null">
                updated_by=#{updatedBy.id},
            </if>
            <if test="isDeleted != null">
                is_deleted=#{isDeleted},
            </if>
            <if test="version != null">
                version=#{version}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="delete">
        UPDATE sys_dict
        SET is_deleted= TRUE
        where id = #{id}
    </update>
</mapper>